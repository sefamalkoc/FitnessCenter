@model IEnumerable<FitnessCenter.Models.Service>

@{
    ViewData["Title"] = "Hizmetler";
}

<h1>Hizmetler</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Yeni Hizmet Ekle</a>
</p>
<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Hizmet Adı</th>
            <th>Süre (Dakika)</th>
            <th>Fiyat</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Name</td>
            <td>@item.DurationMinutes</td>
            <td>@item.Price.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Düzenle">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detaylar">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Sil">
                        <i class="bi bi-trash"></i>
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

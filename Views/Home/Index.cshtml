@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section -->
<section class="hero-section position-relative overflow-hidden">
    <div class="hero-gradient-overlay"></div>
    <div class="container">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-7 hero-content">
                <div class="badge bg-gradient-primary text-white mb-3 px-3 py-2 rounded-pill">
                    <i class="bi bi-lightning-charge-fill me-1"></i> Premium Fitness Deneyimi
                </div>
                <h1 class="display-2 fw-bold mb-4 hero-title">
                    Vücudunuzu ve
                    <span class="text-gradient">Zihninizi Dönüştürün</span>
                </h1>
                <p class="lead mb-4 text-muted fs-5">
                    FitnessCenter'a katılın ve kişiselleştirilmiş antrenman, uzman koçlar ve son teknoloji tesislerle tüm potansiyelinizi ortaya çıkarın. Daha sağlıklı bir yaşam tarzına yolculuğunuz burada başlıyor.
                </p>
                
                <div class="d-flex gap-3 mb-4 flex-wrap">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a asp-controller="Appointments" asp-action="Create" class="btn btn-primary btn-lg px-4 py-3 shadow-lg btn-hover-lift">
                            <i class="bi bi-calendar-check me-2"></i>Randevu Al
                        </a>
                        <a asp-controller="Appointments" asp-action="Index" class="btn btn-outline-primary btn-lg px-4 py-3 btn-hover-lift">
                            <i class="bi bi-clock-history me-2"></i>Randevularım
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg px-4 py-3 shadow-lg btn-hover-lift">
                            <i class="bi bi-person-plus me-2"></i>Başlayın
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg px-4 py-3 btn-hover-lift">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yapın
                        </a>
                    }
                </div>

                <div class="d-flex gap-4 text-muted">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <small>Uzman Antrenörler</small>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <small>Esnek Program</small>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <small>Yapay Zeka Önerileri</small>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 d-none d-lg-block">
                <div class="hero-image-wrapper">
                    <div class="floating-card card border-0 shadow-lg">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="icon-box bg-gradient-primary rounded-3 p-3 me-3">
                                    <i class="bi bi-graph-up-arrow text-white fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0">İlerlemeyi Takip Edin</h6>
                                    <small class="text-muted">Gerçek zamanlı analiz</small>
                                </div>
                            </div>
                            <div class="progress mb-2" style="height: 8px;">
                                <div class="progress-bar bg-gradient-primary" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <small class="text-muted">Hedefin %75'i Tamamlandı</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="hero-particles"></div>
</section>

<!-- Stats Section -->
<section class="stats-section py-5 bg-light">
    <div class="container">
        <div class="row g-4 text-center">
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-icon bg-gradient-primary text-white rounded-circle mx-auto mb-3">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <h3 class="fw-bold mb-0">500+</h3>
                    <p class="text-muted mb-0">Aktif Üye</p>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-icon bg-gradient-success text-white rounded-circle mx-auto mb-3">
                        <i class="bi bi-trophy-fill"></i>
                    </div>
                    <h3 class="fw-bold mb-0">50+</h3>
                    <p class="text-muted mb-0">Uzman Antrenör</p>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-icon bg-gradient-warning text-white rounded-circle mx-auto mb-3">
                        <i class="bi bi-star-fill"></i>
                    </div>
                    <h3 class="fw-bold mb-0">10+</h3>
                    <p class="text-muted mb-0">Özel Program</p>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-icon bg-gradient-info text-white rounded-circle mx-auto mb-3">
                        <i class="bi bi-clock-fill"></i>
                    </div>
                    <h3 class="fw-bold mb-0">24/7</h3>
                    <p class="text-muted mb-0">Destek Hizmeti</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h2 class="display-4 fw-bold mb-3">Neden <span class="text-gradient">FitnessCenter</span> Seçmelisiniz?</h2>
            <p class="lead text-muted">Bizi öne çıkaran özellikleri keşfedin</p>
        </div>

        <div class="row g-4">
            <!-- Feature 1 -->
            <div class="col-md-6 col-lg-4">
                <div class="feature-card card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body p-4">
                        <div class="feature-icon bg-gradient-primary text-white rounded-4 p-3 mb-4 d-inline-block">
                            <i class="bi bi-calendar-check fs-1"></i>
                        </div>
                        <h4 class="card-title mb-3">Akıllı Rezervasyon</h4>
                        <p class="card-text text-muted">
                            Antrenman seanslarınızı kolayca planlayın. Akıllı sistemimiz çakışmaları önler 
                            ve tercihlerinize göre en uygun zaman dilimlerini önerir.
                        </p>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-controller="Appointments" asp-action="Create" class="btn btn-link p-0 text-primary fw-semibold">
                                Hemen Rezervasyon <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Feature 2 -->
            <div class="col-md-6 col-lg-4">
                <div class="feature-card card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body p-4">
                        <div class="feature-icon bg-gradient-success text-white rounded-4 p-3 mb-4 d-inline-block">
                            <i class="bi bi-person-badge fs-1"></i>
                        </div>
                        <h4 class="card-title mb-3">Uzman Antrenörler</h4>
                        <p class="card-text text-muted">
                            Çeşitli fitness disiplinlerinde uzmanlaşmış sertifikalı profesyonellerle çalışın. 
                            Her antrenör, hedeflerinize ulaşmanızda size yardımcı olacak benzersiz uzmanlık getirir.
                        </p>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Trainers" asp-action="Index" class="btn btn-link p-0 text-success fw-semibold">
                                Antrenörleri Yönet <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Feature 3 -->
            <div class="col-md-6 col-lg-4">
                <div class="feature-card card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body p-4">
                        <div class="feature-icon bg-gradient-warning text-white rounded-4 p-3 mb-4 d-inline-block">
                            <i class="bi bi-lightning-charge fs-1"></i>
                        </div>
                        <h4 class="card-title mb-3">Yapay Zeka Önerileri</h4>
                        <p class="card-text text-muted">
                            Yapay zeka destekli kişiselleştirilmiş antrenman önerileri alın. Sistemimiz ilerlemenizi analiz eder 
                            ve fitness yolculuğunuz için en iyi programları önerir.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Feature 4 -->
            <div class="col-md-6 col-lg-4">
                <div class="feature-card card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body p-4">
                        <div class="feature-icon bg-gradient-info text-white rounded-4 p-3 mb-4 d-inline-block">
                            <i class="bi bi-building fs-1"></i>
                        </div>
                        <h4 class="card-title mb-3">Premium Tesisler</h4>
                        <p class="card-text text-muted">
                            Konforunuz için tasarlanmış son teknoloji ekipmanlar ve modern tesisler. 
                            Sizi motive eden ve mükemmelliğe ilham veren bir ortamda antrenman yapın.
                        </p>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Gyms" asp-action="Index" class="btn btn-link p-0 text-info fw-semibold">
                                Lokasyonları Görüntüle <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Feature 5 -->
            <div class="col-md-6 col-lg-4">
                <div class="feature-card card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body p-4">
                        <div class="feature-icon bg-gradient-danger text-white rounded-4 p-3 mb-4 d-inline-block">
                            <i class="bi bi-graph-up-arrow fs-1"></i>
                        </div>
                        <h4 class="card-title mb-3">İlerleme Takibi</h4>
                        <p class="card-text text-muted">
                            Detaylı analizler ve ilerleme raporları ile fitness yolculuğunuzu izleyin. 
                            Başarılarınızı görselleştirin ve yolun her adımında motive kalın.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Feature 6 -->
            <div class="col-md-6 col-lg-4">
                <div class="feature-card card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body p-4">
                        <div class="feature-icon bg-gradient-purple text-white rounded-4 p-3 mb-4 d-inline-block">
                            <i class="bi bi-heart-pulse fs-1"></i>
                        </div>
                        <h4 class="card-title mb-3">Çeşitli Programlar</h4>
                        <p class="card-text text-muted">
                            Yoga'dan yüksek yoğunluklu antrenman"a kadar geniş program yelpazesinden seçim yapın. 
                            Fitness seviyenize ve hedeflerinize uygun mükemmel antrenmanı bulun.
                        </p>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Services" asp-action="Index" class="btn btn-link p-0 text-primary fw-semibold">
                                Hizmetleri Keşfedin <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section py-5 bg-gradient-primary text-white">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-8 text-center text-lg-start mb-4 mb-lg-0">
                <h2 class="display-5 fw-bold mb-3">Fitness Yolculuğunuza Başlamaya Hazır mısınız?</h2>
                <p class="lead mb-0">
                    FitnessCenter ile hayatlarını dönüştüren binlerce üyeye katılın.
                </p>
            </div>
            <div class="col-lg-4 text-center text-lg-end">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a asp-controller="Appointments" asp-action="Create" class="btn btn-light btn-lg px-5 py-3 shadow-lg">
                        <i class="bi bi-calendar-check me-2"></i>Hemen Rezervasyon
                    </a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg px-5 py-3 shadow-lg">
                        <i class="bi bi-person-plus me-2"></i>Bugün Katılın
                    </a>
                }
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Smooth scroll animation for hero section
        document.addEventListener('DOMContentLoaded', function() {
            // Add fade-in animation to hero content
            const heroContent = document.querySelector('.hero-content');
            if (heroContent) {
                heroContent.style.animation = 'fadeInUp 0.8s ease-out';
            }

            // Floating card animation
            const floatingCard = document.querySelector('.floating-card');
            if (floatingCard) {
                floatingCard.style.animation = 'float 3s ease-in-out infinite';
            }

            // Counter animation for stats
            const stats = document.querySelectorAll('.stat-card h3');
            stats.forEach(stat => {
                const target = parseInt(stat.textContent);
                let current = 0;
                const increment = target / 50;
                const timer = setInterval(() => {
                    current += increment;
                    if (current >= target) {
                        stat.textContent = stat.textContent;
                        clearInterval(timer);
                    } else {
                        stat.textContent = Math.floor(current) + '+';
                    }
                }, 20);
            });
        });
    </script>
}

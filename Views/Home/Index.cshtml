@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section -->
<div class="position-relative text-center text-white mb-5" style="background-color: #000; min-height: 80vh; display: flex; align-items: center; justify-content: center; overflow: hidden;">
    <!-- Background Image Overlay (Darken) -->
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: radial-gradient(circle, rgba(20,20,20,0.4) 0%, rgba(0,0,0,0.9) 100%); z-index: 1;"></div>
    
    <!-- Ideally we would use a real image here, for now a placeholder pattern or color -->
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-image: url('https://images.unsplash.com/photo-1540497077202-7c8a33801524?q=80&w=2070&auto=format&fit=crop'); background-size: cover; background-position: center; opacity: 0.6;"></div>

    <div class="container position-relative" style="z-index: 2;">
        <h1 class="display-1 fw-bold text-uppercase mb-3" style="font-family: 'Oswald', sans-serif; letter-spacing: 5px; font-size: 5rem;">FITNESS BİR<br>YAŞAM BİÇİMİDİR</h1>
        <p class="lead mb-4 text-light" style="font-size: 1.5rem; max-width: 800px; margin: 0 auto;">İSTER YENİ BAŞLAYAN OLUN, İSTER DENEYİMLİ BİR SPORCU. HEDEFLERİNİZE ULAŞMANIZDA YANINIZDAYIZ.</p>
        <div class="d-flex justify-content-center gap-3">
             @if (User.Identity?.IsAuthenticated == true)
            {
                <a asp-controller="Appointments" asp-action="Create" class="btn btn-primary btn-lg px-5 py-3 fs-5">HEMEN BAŞLA</a>
                 <a asp-controller="AI" asp-action="Index" class="btn btn-outline-light btn-lg px-5 py-3 fs-5">YAPAY ZEKA PLAN</a>
            }
            else
            {
                 <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg px-5 py-3 fs-5">KAYIT OL</a>
                 <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg px-5 py-3 fs-5">GİRİŞ YAP</a>
            }
        </div>
    </div>
</div>

<!-- Features / Services Section -->
<div class="container mb-5">
    <div class="text-center mb-5">
        <h2 class="display-4 fw-bold">HİZMETLERİMİZ</h2>
        <div style="width: 100px; height: 4px; background-color: var(--primary-red); margin: 20px auto;"></div>
    </div>

    <!-- We can fetch dynamic services here later if passed from controller, for now static or minimal dynamic -->
   @*  If viewmodel is passed, we loop. Assuming simple static for layout demo based on previous file content *@
   
   <div class="row g-4">
       <!-- Mock content matching the dark theme -->
       <div class="col-md-4">
           <div class="card h-100">
               <img src="https://images.unsplash.com/photo-1571019614242-c5c5dee9f50b?w=800&auto=format&fit=crop" class="card-img-top" alt="Cardio" style="height: 300px; object-fit: cover; opacity: 0.8">
               <div class="card-body text-center p-4">
                   <h3 class="card-title">KARDİYO</h3>
                   <p class="card-text">Dayanıklılığınızı artırın ve kalbinizi güçlendirin.</p>
               </div>
           </div>
       </div>
       <div class="col-md-4">
           <div class="card h-100">
               <img src="https://images.unsplash.com/photo-1534438327276-14e5300c3a48?w=800&auto=format&fit=crop" class="card-img-top" alt="Strength" style="height: 300px; object-fit: cover; opacity: 0.8">
               <div class="card-body text-center p-4">
                   <h3 class="card-title">GÜÇ ANTRENMANI</h3>
                   <p class="card-text">Kas kütlenizi artırın ve vücudunuzu şekillendirin.</p>
               </div>
           </div>
       </div>
       <div class="col-md-4">
           <div class="card h-100">
               <img src="https://images.unsplash.com/photo-1541534741688-6078c6bfb5c5?w=800&auto=format&fit=crop" class="card-img-top" alt="Personal Training" style="height: 300px; object-fit: cover; opacity: 0.8">
               <div class="card-body text-center p-4">
                   <h3 class="card-title">ÖZEL DERS</h3>
                   <p class="card-text">Profesyonel eğitmenlerle birebir çalışma fırsatı.</p>
               </div>
           </div>
       </div>
   </div>
</div>

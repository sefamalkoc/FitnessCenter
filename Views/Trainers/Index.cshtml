@model IEnumerable<FitnessCenter.Models.Trainer>

@{
    ViewData["Title"] = "Antrenörler";
}

<div class="container mt-5">
    <h1>Antrenörler</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Yeni Antrenör Ekle</a>
</p>
<table class="table table-dark table-hover align-middle">
    <thead>
        <tr class="text-uppercase" style="font-family: var(--font-heading); color: var(--primary-red);">
            <th>Antrenör Adı</th>
            <th>Müsaitlik</th>
            <th>Uzmanlık Alanları</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="fw-bold">@item.Name</td>
            <td>@item.Availability</td>
            <td>
                @foreach(var s in item.Specialties)
                {
                    <span class="badge rounded-pill bg-info text-dark border border-info">@s.Name</span>
                }
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-light" title="Düzenle">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info ms-1" title="Detaylar">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger ms-1" title="Sil">
                        <i class="bi bi-trash"></i>
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
</div>

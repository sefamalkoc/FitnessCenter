@model IEnumerable<FitnessCenter.Models.Appointment>

@{
    ViewData["Title"] = User.IsInRole("Admin") ? "Randevu Yönetimi" : "Randevularım";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />
    
    <p>
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Yeni Randevu Al</a>
    </p>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Randevu bulunamadı. Yeni randevu oluşturmak için "Yeni Randevu Al" butonuna tıklayın.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle">
                <thead>
                    <tr class="text-uppercase" style="font-family: var(--font-heading); color: var(--primary-red);">
                        @if (User.IsInRole("Admin"))
                        {
                            <th>Üye</th>
                        }
                        <th>Tarih</th>
                        <th>Saat</th>
                        <th>Hizmet</th>
                        <th>Antrenör</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                var isPast = item.Date.Date < DateTime.Now.Date || (item.Date.Date == DateTime.Now.Date && item.Time < DateTime.Now.TimeOfDay);
                var rowClass = isPast ? "text-muted opacity-50" : "";
                    <tr class="@rowClass">
                        @if (User.IsInRole("Admin"))
                        {
                            <td class="fw-bold">@item.Member?.FullName</td>
                        }
                        <td>
                            @item.Date.ToString("dd.MM.yyyy")
                            @if(isPast) { <span class="badge bg-secondary ms-2" style="font-size: 0.7em;">GEÇMİŞ</span> }
                        </td>
                        <td>@item.Time.ToString(@"hh\:mm")</td>
                        <td class="text-uppercase text-muted">@item.Service?.Name</td>
                        <td>@item.Trainer?.Name</td>
                        <td>
                            @if(item.Status == FitnessCenter.Models.AppointmentStatus.Approved)
                            {
                                <span class="badge bg-success rounded-pill px-3">✓ Onaylandı</span>
                            }
                            else if(item.Status == FitnessCenter.Models.AppointmentStatus.Pending)
                            {
                                <span class="badge bg-warning text-dark rounded-pill px-3">⏳ Beklemede</span>
                            }
                            else if(item.Status == FitnessCenter.Models.AppointmentStatus.Cancelled)
                            {
                                <span class="badge bg-danger rounded-pill px-3">✗ İptal Edildi</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary rounded-pill px-3">@item.Status</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-light" title="Düzenle">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                
                                @if (User.IsInRole("Admin") && item.Status == FitnessCenter.Models.AppointmentStatus.Pending)
                                {
                                    <form asp-action="Approve" asp-route-id="@item.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-success ms-1" title="Onayla" onclick="return confirm('Bu randevuyu onaylamak istediğinize emin misiniz?')">
                                            <i class="bi bi-check-circle"></i>
                                        </button>
                                    </form>
                                }
                                
                                @if (item.Status != FitnessCenter.Models.AppointmentStatus.Cancelled)
                                {
                                    <form asp-action="Cancel" asp-route-id="@item.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-warning ms-1" title="İptal Et" onclick="return confirm('Bu randevuyu iptal etmek istediğinize emin misiniz?')">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                    </form>
                                }
                                
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger ms-1" title="Sil">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    }
</div>

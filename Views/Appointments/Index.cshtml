@model IEnumerable<FitnessCenter.Models.Appointment>

@{
    ViewData["Title"] = User.IsInRole("Admin") ? "Randevu Yönetimi" : "Randevularım";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />
    
    <p>
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Yeni Randevu Al</a>
    </p>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Randevu bulunamadı. Yeni randevu oluşturmak için "Yeni Randevu Al" butonuna tıklayın.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        @if (User.IsInRole("Admin"))
                        {
                            <th>Üye</th>
                        }
                        <th>Tarih</th>
                        <th>Saat</th>
                        <th>Hizmet</th>
                        <th>Antrenör</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        @if (User.IsInRole("Admin"))
                        {
                            <td>@item.Member?.FullName</td>
                        }
                        <td>@item.Date.ToString("dd.MM.yyyy")</td>
                        <td>@item.Time.ToString(@"hh\:mm")</td>
                        <td>@item.Service?.Name</td>
                        <td>@item.Trainer?.Name</td>
                        <td>
                            @if(item.Status == FitnessCenter.Models.AppointmentStatus.Approved)
                            {
                                <span class="badge bg-success">✓ Onaylandı</span>
                            }
                            else if(item.Status == FitnessCenter.Models.AppointmentStatus.Pending)
                            {
                                <span class="badge bg-warning text-dark">⏳ Beklemede</span>
                            }
                            else if(item.Status == FitnessCenter.Models.AppointmentStatus.Cancelled)
                            {
                                <span class="badge bg-danger">✗ İptal Edildi</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@item.Status</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Düzenle">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                
                                @if (User.IsInRole("Admin") && item.Status == FitnessCenter.Models.AppointmentStatus.Pending)
                                {
                                    <form asp-action="Approve" asp-route-id="@item.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-success" title="Onayla" onclick="return confirm('Bu randevuyu onaylamak istediğinize emin misiniz?')">
                                            <i class="bi bi-check-circle"></i>
                                        </button>
                                    </form>
                                }
                                
                                @if (item.Status != FitnessCenter.Models.AppointmentStatus.Cancelled)
                                {
                                    <form asp-action="Cancel" asp-route-id="@item.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-warning" title="İptal Et" onclick="return confirm('Bu randevuyu iptal etmek istediğinize emin misiniz?')">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                    </form>
                                }
                                
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Sil">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    }
</div>

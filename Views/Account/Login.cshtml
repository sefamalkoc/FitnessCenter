@model FitnessCenter.Models.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <section>
            <form method="post" asp-action="Login">
                <h2>Hesabınıza Giriş Yapın</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <input type="hidden" asp-for="ReturnUrl" />
                
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="isim@ornek.com" />
                    <label asp-for="Email">E-posta</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="şifre" />
                    <label asp-for="Password">Şifre</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Giriş Yap</button>
                </div>
                <div class="mt-3">
                    <p>
                        <a asp-action="Register">Yeni kullanıcı olarak kayıt ol</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model FitnessCenter.Models.VisualizationRequest
@{
    ViewData["Title"] = "Vücut Görselleştirme";
    var result = ViewBag.Result as FitnessCenter.Models.VisualizationResult;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                 <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                    <h2 class="fw-bold" style="color: #6f42c1;"><i class="bi bi-stars me-2"></i>Yapay Zeka Vücut Görselleştirme</h2>
                    <p class="text-muted">Hayalinizdeki vücut tipini tarif edin, yapay zeka sizin için çizsin.</p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Visualization" method="post">
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Tasvir (Prompt)</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Örn: Plajda duran, çok kaslı, fit bir vücut yapısı..."></textarea>
                            <div class="form-text">İstediğiniz vücut tipini, ortamı ve tarzı detaylıca anlatın.</div>
                        </div>
                        <button type="submit" class="btn btn-dark w-100 py-2 fw-bold" style="background-color: #6f42c1; border-color: #6f42c1;">
                            <i class="bi bi-image me-2"></i>Görüntü Oluştur
                        </button>
                    </form>
                </div>
            </div>

            @if (result != null && !string.IsNullOrEmpty(result.ImageUrl))
            {
                <div class="card border-0 shadow mt-5 animate__animated animate__fadeInUp">
                    <div class="card-body p-2 text-center">
                        <h5 class="card-title fw-bold mb-3">Oluşturulan Sonuç</h5>
                        <img src="@result.ImageUrl" class="img-fluid rounded shadow-sm" alt="Yapay Zeka Fitness Görseli" />
                    </div>
                </div>
            }
            else if (result != null)
            {
                 <div class="alert alert-warning mt-4">
                    Görüntü oluşturulamadı. Lütfen API anahtarınızı kontrol edip tekrar deneyin.
                </div>
            }
        </div>
    </div>
</div>
